<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/nameLoc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="True"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@+id/TextView01"
            android:textSize="24sp" >
        </TextView>

        <TextView
            android:id="@+id/loc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@+id/TextView02"
            android:textSize="24sp" />
    </LinearLayout>

     <LinearLayout
        android:id="@+id/answerAndPics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameLoc" >
        
    <TextView
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.40"
        android:text="@+id/TextView03"
        android:textSize="24sp" />
    
    <ImageView
            android:id="@+id/answer_player_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            />
    
    </LinearLayout>

    <TextView
        android:id="@+id/descrption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answerAndPics"
        android:text="@+id/TextView04"
        android:textSize="24sp" />

</RelativeLayout>